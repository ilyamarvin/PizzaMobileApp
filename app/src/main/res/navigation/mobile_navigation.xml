<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_menu">

    <fragment
        android:id="@+id/navigation_menu"
        android:name="com.ilyamarvin.pizzamobileapp.ui.menu.MenuFragment"
        android:label="@string/title_bar_menu"
        tools:layout="@layout/fragment_menu" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.ilyamarvin.pizzamobileapp.ui.profile.ProfileFragment"
        android:label="@string/title_bar_profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/navigation_contacts"
        android:name="com.ilyamarvin.pizzamobileapp.ui.contacts.ContactsFragment"
        android:label="@string/title_bar_contacts"
        tools:layout="@layout/fragment_contacts" >
        <action
            android:id="@+id/action_navigation_contacts_to_navigation_about"
            app:destination="@id/navigation_about" />
    </fragment>

    <fragment
        android:id="@+id/navigation_about"
        android:name="com.ilyamarvin.pizzamobileapp.ui.contacts.ContactsFragment"
        android:label="@string/title_bar_contacts"
        tools:layout="@layout/fragment_about" />

    <fragment
        android:id="@+id/navigation_cart"
        android:name="com.ilyamarvin.pizzamobileapp.ui.cart.CartFragment"
        android:label="@string/title_bar_cart"
        tools:layout="@layout/fragment_cart" />

</navigation>